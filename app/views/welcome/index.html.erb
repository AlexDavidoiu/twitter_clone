<h1>Twitter Clone</h1>
<% if Current.user %>
  Logged in as: <%= Current.user.email %><br>
  <%= link_to "View your profile", profile_path %>
  <%= button_to "Logout", logout_path, method: :delete %>
<% else %>
  <%= link_to "Sign Up", register_path %>
  or
  <%= link_to "Login", login_path %>
<% end %>
<br>

<div><%= link_to "View recent tweets", tweets_path %></div>
<div><%= link_to "View users", users_path %></div>