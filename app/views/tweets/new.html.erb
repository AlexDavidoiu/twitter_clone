<h1>Tweet something!</h1>

<% if @tweet.errors.any? %>
  <ul>
    <% @tweet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @tweet, url: tweets_path do |f| %>
  <p>
    <%= f.label "content" %><br>
    <%= f.text_area :content, placeholder: "What's happening?" %>
  </p>
  <p>
    <%= f.submit "Post Tweet" %>
  </p>
<% end %>