<h1>Edit your profile</h1>

<% if Current.user.errors.any? %>
  <ul>
    <% Current.user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email, value: Current.user.email %>
  </p>
  <p>
    <%= f.label :bio %><br/>
    <%= f.text_field :bio %>
  </p>
  <p>
    <%= f.submit %><br/>
  </p>
<% end %>